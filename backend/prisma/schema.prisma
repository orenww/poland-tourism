generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  icon      String?
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  image       String?
  content     Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}